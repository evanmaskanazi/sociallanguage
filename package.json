{
  "name": "cypresstests",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:dev": "cypress run --env environment=development",
    "test:staging": "cypress run --env environment=staging",
    "test:prod": "cypress run --env environment=production",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:edge": "cypress run --browser edge",
    "cypress:run:firefox": "cypress run --browser firefox",
    "test:integration": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:smoke": "cypress run --spec 'cypress/e2e/smoke/**/*.cy.js'",
    "test:ci": "cypress run --record false",
    "test:parallel": "cypress run --record --parallel",
    "report:merge": "mochawesome-merge cypress/results/*.json > cypress/results/combined.json",
    "report:generate": "marge cypress/results/combined.json -f report -o cypress/results",
    "test:with-report": "npm run test:ci && npm run report:merge && npm run report:generate",
    "clean:reports": "rm -rf cypress/results cypress/screenshots cypress/videos",
    "ci:test": "npm run clean:reports && npm run test:with-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "cypress": "^14.5.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}